@code {
    private string message = "Choose your move!";
    private string messageColor = "blue";

    private void Play(string playerChoice)
    {
        var rnd = new Random();
        string[] options = { "Rock", "Paper", "Scissors" };
        string computerChoice = options[rnd.Next(options.Length)];

        if (playerChoice == computerChoice)
        {
            message = $"ğŸ¤ Tie! Both chose {playerChoice}";
            messageColor = "orange";
        }
        else if ((playerChoice == "Rock" && computerChoice == "Scissors") ||
                 (playerChoice == "Paper" && computerChoice == "Rock") ||
                 (playerChoice == "Scissors" && computerChoice == "Paper"))
        {
            message = $"ğŸ‰ You Win! {playerChoice} beats {computerChoice}";
            messageColor = "green";
        }
        else
        {
            message = $"ğŸ’” You Lose! {computerChoice} beats {playerChoice}";
            messageColor = "red";
        }
    }
}
